{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "jsx": "react-jsx",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@common": ["libs/common/src/index.ts"],
      "@ui": ["libs/ui/src/index.ts"],
      "@utils": ["libs/utils/src/index.ts"],
      // "@project-board": ["apps/project-board/src/*"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
